@* it's a razor component created *@

@* /employeedetails if no id exit *@
@page "/employeedetails"
@*route is the page*@
@page "/employeedetails/{Id}"

@inherits EmployeeDetailsBase
@*when the data is not ready*@
@if (Employee == null)
{
    <div class="spinner-border"></div>
}
else
{


    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>@Employee.FirstName @Employee.LastName @(Coordinates)</h1>
                </div>
                <div class="card-body text-center">
                    <img class="card-img-top " src="@Employee.PhotoPath" @onmousemove="Mouse_Move"/>

                    <h4>Employee ID: @Employee.EmployeeId</h4>
                    <h4>Email: @Employee.Email</h4>
                    @* if no department data, then Department: N/A *@
                    <h4>Department: @(Employee.Department==null?"N/A":Employee.Department.DepartmentName)</h4>

                    <div class="card-footer text-center">
                        @* back is / because in employeeList @page is / *@
                        <a href="/" class="btn btn-primary m-1">Back</a>
                        <a href="#" class="btn btn-primary m-1">Edit</a>
                        <a href="#" class="btn btn-danger m-1">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>



}