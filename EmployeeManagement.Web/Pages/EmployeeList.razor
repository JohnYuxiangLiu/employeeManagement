@page "/"
@inherits EmployeeListBase

<h3>EmployeeList</h3>

<div class="card-deck">
    @foreach (var employee in Employees)
    {
        //m-3: medius 3 bootstrap class for each card

        <div class="card m-3" style="min-width:18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@employee.FirstName @employee.LastName</h3>
            </div>            
            
            <img class="card-img-top imageThumbnail" src="@employee.PhotoPath" />

            <div class="card-footer text-center">
                <button href="#" class="btn btn-primary m-1">View</button>
                <button href="#" class="btn btn-primary m-1">Edit</button>
                <button href="#" class="btn btn-danger m-1">Delete</button>
            </div> 
        </div> 
    }

</div>
